<body>

  <p>Create a To Do List</p>

<div class="row">
  <section class="medium-6">

    <form action="/" id="newForm" method="post" role="form">
      <input id="new" name="new" placeholder="Enter new list" maxlength="256" required="" type="text"></input></br>
      <input id="Submit" value="Submit" type="submit"></input>
    </form>

     <form action="/" id="retrieveForm" method="post" role="form">
      <input id="retrieve" name="retrieve" placeholder="Retrieve list" required="" maxlength="256" type="text"></input></br>
      <input id="Submit" value="Submit" type="submit"></input>
    </form>

    <form action="/" id="addForm" method="post" role="form">
      <input id="add" name="add" placeholder="Add to list" required="" maxlength="256" type="text"></input></br>
      <input id="Submit" value="Submit" type="submit"></input>
    </form>

    <form action="/" id="removeForm" method="post" role="form">
      <input id="remove" name="remove" placeholder="Remove from list" required="" maxlength="256" type="text"></input></br>
      <input id="Submit" value="Submit" type="submit"></input>
    </form>          

  </section>

  <section class="medium-6">

    <p id="list">{{title}}</p>
    <ol id="items">
      {{#each items}}
      <li>{{ this }}</li>
      {{/each}}
    </ol>

  </section>
</div>

