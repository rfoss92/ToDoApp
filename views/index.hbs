</head>

<body>

  <h1>Create a To Do List</h1>

  <div class="grid-container content">
    <section class="grid-item">

      <form action="/" id="newForm" method="post" role="form">
        <label for="new"></label>
        <input id="new" name="new" placeholder="Create list" maxlength="256" required="" type="text"></input>
        <button id="Submit" type="submit" aria-label="Create List"><i class="fas fa-pencil-alt"></i></button>
        </br>
      </form>

       <form action="/" id="retrieveForm" method="post" role="form">
        <label for="retrieve"></label>
        <input id="retrieve" name="retrieve" placeholder="Retrieve list"required="" maxlength="256" type="text"></input>
        <button id="Submit" type="submit" aria-label="Retrieve List"><i class="fa fa-search"></i></button>
        </br>
      </form>

      <form action="/" id="addForm" method="post" role="form">
        <label for="add"></label>
        <input id="add" name="add" placeholder="Add"required="" maxlength="256" type="text"></input>
        <button id="Submit" type="submit" aria-label="Add item"><i class="fas fa-plus"></i></button>
        </br>
      </form>

      <form action="/" id="removeForm" method="post" role="form">
        <label for="remove"></label>
        <input id="remove" name="remove" placeholder="Remove" required="" maxlength="256" type="text"></input>
        <button id="Submit" type="submit" aria-label="Remove Item"><i class="fas fa-minus"></i></button>
        </br>
      </form>

    </section>

    <section class="grid-item">

      <h2 id="listName">{{title}}</h2>
      <ol id="items">
        {{#each items}}
        <li>{{ this }}</li>
        {{/each}}
      </ol>

    </section>
  </div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
